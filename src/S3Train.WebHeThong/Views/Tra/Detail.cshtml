@using S3Train.WebHeThong.Models
@model IList<ChiTietMuonTraViewModel>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thông Tin Chi Tiết Phiếu Trả</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Tra")">Tra</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detail</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-9">
        <div class="card mb-4">
            @foreach (var muon in Model)
            {
            <div class="card-body" id="b">
                <div class="row">
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Người Trả</h6>
                        @if (muon.User.Id == muon.MuonTra.UserId)
                        {
                            <p id="SoLuong">@Html.DisplayFor(item => muon.MuonTra.User.FullName)</p>
                        }

                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Tài Khoản</h6>
                        <p>@Html.DisplayFor(item => muon.User.UserName)</p>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Số Lượng Trả</h6>
                        <p>@Html.DisplayFor(item => muon.SoLuong) văn bản</p>
                        <input value="@muon.SoLuong" type="hidden" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Văn Thư</h6>
                        <p>@Html.DisplayFor(item => muon.MuonTra.VanThu)</p>
                            
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary" id="NgayMuon">Ngày Mượn</h6>
                        <p>@Html.DisplayFor(item => muon.MuonTra.NgayMuon)</p>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Ngày Trả</h6>
                        <p>@Html.DisplayFor(item => muon.MuonTra.NgayTra)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg col-md">
                        <h6 class="m-0 font-weight-bold text-primary">Văn Bản Trả</h6>
                        @if (muon.TaiLieuVanBan.Id == muon.TaiLieuVanBanId)
                        {
                            <p>@Html.DisplayFor(item => muon.TaiLieuVanBan.Ten)</p>
                        }

                    </div>
                </div>
            </div>
                

            }
        </div>
    </div>
    <div class="col-lg-3">
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Trạng Thái</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTrangThai.cshtml", Model.First().MuonTra.TrangThai)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Tình Trạng</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTinhTrangLuuTru.cshtml", Model.First().MuonTra.TinhTrang)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section  scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}


