@using S3Train.WebHeThong.Models
@model HopViewIndexModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    int stt = 1;
}

<div class="card">
    <div class="card-body">
        <a href="@Url.Action("CreateOrUpdate","Hop")" class="btn btn-info m-2">
            <i class="fas fa-plus"></i> Tạo Mới
        </a>

        <table class="table table-responsive-lg">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Chuyên Đề</th>
                    <th>Vị Trí Hộp</th>
                    <th>Phòng Ban</th>
                    <th>Trạng Thái</th>
                    <th>Hoạt Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@Html.DisplayFor(m => item.ChuyenDe)</td>
                        <td>@item.Ke.Tu.Ten Kệ Thứ @Html.DisplayFor(m => item.Ke.SoThuTu) Hộp Số @Html.DisplayFor(m => item.SoHop)</td>
                        <td>@Html.DisplayFor(m => item.PhongBan.Ten)</td>
                        <td>@Html.Partial("~/Views/Shared/_PartialTrangThai.cshtml", item.TrangThai)</td>
                        <td>
                            <a href="@Url.Action("Detail","Hop", new { id=item.Id})" class="btn btn-info" title="Thông Tin Chi Tiết">
                                <i class="fas fa-info"></i>
                            </a>
                            <a href="@Url.Action("CreateOrUpdate","Hop", new { id=item.Id})" class="btn btn-primary" title="Cập Nhật">
                                <i class="fas fa-sync"></i>
                            </a>
                            <a href="@Url.Action("Delete","Hop", new { id=item.Id})" class="btn btn-danger" onclick="return confirm('Bạn Có Chắc Muốn Xóa Hộp @item.SoHop Của Kệ @item.Ke.SoThuTu Kho @item.Ke.Tu.Ten?');" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    stt += 1;
                }
                <tr class="pageging">
                    <td colspan="8">
                        @Html.PagedListPager(Model.Paged, pageIndex => Url.Action("Index", new RouteValueDictionary {
                        { "pageIndex" , pageIndex },
                        { "pageSize", Model.PageSize > 0 ? Model.PageSize : GlobalConfigs.DEFAULT_PAGESIZE } ,
                        }), new PagedListRenderOptions
                        {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        MaximumPageNumbersToDisplay = 5,
                        EllipsesElementClass = "page-link",
                        })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}

