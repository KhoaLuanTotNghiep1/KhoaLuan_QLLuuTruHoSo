@using S3Train.Core.Constant
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc
@model S3Train.WebHeThong.Models.TuIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    int stt = 1;
    int soLuong = 0;
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("CreateOrUpdate","Tu")" class="btn btn-info m-2 btn">
                    <i class="fas fa-plus"></i> Tạo Mới
                </a>
            </div>
            <div class="col-md-6">
                @Html.Partial("~/Views/Shared/_PartialSearch.cshtml")
            </div>
        </div>
        <table class="table table-responsive-lg">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>Người Quản Lý</th>
                    <th>Lưu Trữ</th>
                    <th>Trạng Thái</th>
                    <th>Hoạt Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    soLuong = item.SoLuongMax - item.SoLuongHienTai;
                    <tr>
                        <td>@stt</td>
                        <td>@Html.DisplayFor(m => item.Ten)</td>
                        <td>@Html.DisplayFor(m => item.NgươiQuanLy)</td>
                        <td>@Html.Partial("~/Views/Shared/_PartialTinhTrang.cshtml", soLuong)</td>
                        <td>@Html.Partial("~/Views/Shared/_PartialTrangThai.cshtml", item.TrangThai)</td>
                        <td>
                            <a href="@Url.Action("Detail","Tu", new { id=item.Id})" class="btn btn-info" title="Thông Tin Chi Tiết">
                                <i class="fas fa-info"></i>
                            </a>
                            <a href="@Url.Action("CreateOrUpdate","Tu", new { id=item.Id})" class="btn btn-primary" title="Cập Nhật">
                                <i class="fas fa-sync"></i>
                            </a>
                            <a href="@Url.Action("Delete","Tu", new { id=item.Id})" class="btn btn-danger" onclick="return confirm('Bạn Có Chắc Muốn Xóa @item.Ten?');" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    stt += 1;
                }
                <tr class="pageging">
                    <td colspan="8">
                        @Html.PagedListPager(Model.Paged, pageIndex => Url.Action("Index", new RouteValueDictionary {
                        { "pageIndex" , pageIndex },
                        { "pageSize", Model.PageSize > 0 ? Model.PageSize : GlobalConfigs.DEFAULT_PAGESIZE } ,
                        }), new PagedListRenderOptions
                        {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        MaximumPageNumbersToDisplay = 5,
                        EllipsesElementClass = "page-link",
                        })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}

