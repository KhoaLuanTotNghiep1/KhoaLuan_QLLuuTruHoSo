@using S3Train.WebHeThong.Models
@model IList<ChiTietMuonTraViewModel>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thông Tin Chi Tiết Phiếu Mượn</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Muon")">Muon</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detail</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-9">
        <div class="card mb-4">
            @foreach (var muon in Model)
            {
                <div class="card-body b">
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary">Đơn vị/Người mượn</h6>
                            @if (muon.User.Id == muon.MuonTra.UserId)
                            {
                                <p id="SoLuong">@Html.DisplayFor(item => muon.MuonTra.User.FullName)</p>
                                <input id="User" value="@muon.MuonTra.UserId" type="hidden" />
                            }

                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary">Tl/VB mượn</h6>
                            @if (muon.TaiLieuVanBan.Id == muon.TaiLieuVanBanId)
                            {
                                <p>@Html.DisplayFor(item => muon.TaiLieuVanBan.Ten)</p>
                                <input id="TLVB" value="@muon.TaiLieuVanBan.Id" type="hidden" />
                            }

                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary">Số Lượng Mượn</h6>
                            <p>@Html.DisplayFor(item => muon.SoLuong)</p>
                            <input value="@muon.SoLuong" type="hidden" />
                            <input id="SLuong" value="@muon.SoLuong" type="hidden" />
                        </div>

                        <div class="col-lg-3">
                            <input class="check" value="@muon.TaiLieuVanBanId" type="checkbox" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary">Văn Thư</h6>
                            @if (muon.MuonTra.VanThu == muon.MuonTra.User.Id)
                            {
                                <p>@Html.DisplayFor(item => muon.MuonTra.User.FullName)</p>

                            }
                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary" id="NgayMuon">Ngày Mượn</h6>
                            <p>@Html.DisplayFor(item => muon.MuonTra.NgayMuon)</p>
                            <input id="NgMuon" value="@muon.MuonTra.NgayMuon" type="hidden" />
                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold text-primary">Ngày Trả</h6>
                            <p>@Html.DisplayFor(item => muon.MuonTra.NgayKetThuc)</p>
                        </div>
                    </div>

                </div>

            }
                <div class="col-lg-3">
                    <div class="form-group">
                        <input id="tra" type="submit" value="Trả TL/VB" class="btn btn-success" />
                    </div>
                </div>
        </div>

        
    </div>
    <div class="col-lg-3">
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Trạng Thái</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTrangThai.cshtml", Model.First().MuonTra.TrangThai)</div>
                                <div class="mt-2 mb-0 text-muted text-xs">
                                    <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                                    <span>Since last month</span>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Tình Trạng</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTinhTrangLuuTru.cshtml", Model.First().MuonTra.TinhTrang)</div>
                                <div class="mt-2 mb-0 text-muted text-xs">
                                    <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                                    <span>Since last month</span>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section  scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        var ctMuon = [];
        $(document).ready(function () {
            $(".b").each(function () {
                var _this = $(this);
                ($(this).find(".check")).on('click', function () {
                    if ($('.check').is(':checked')) {
                        var id = _this.find(".check").val();
                        $.ajax({
                            type: "POST",
                            url: '/Tra/AddItems',
                            data: {
                                Id:id
                            },
                            success: function (data) {
                            }
                        });
                    }
                });
                  
            });
        });

        $("#tra").click(function () {
            $.ajax({
                type: "POST",
                url: '/Tra/CreateOrUpdate',
                data: {
                },
                success: function (data) {
                    window.location.href = "http://localhost:19873/Tra/Index";
                    TempData["AlertMessage"] = "Trả Thành Công";
                }
            });
        });
    </script>
}


